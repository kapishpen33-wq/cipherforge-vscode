{
  "name": "cipherforge",
  "displayName": "CipherForge: Autonomous Security",
  "description": "State-of-the-Art Asymmetric Adversarial DevSecOps Engine.",
  "publisher": "kapishp",
  "version": "2.0.0",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Machine Learning",
    "Security"
  ],
  "keywords": [
    "ai",
    "security",
    "gemini",
    "claude",
    "devsecops",
    "adversarial"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cipherforge.remediate",
        "title": "CipherForge: Agentic Remediation"
      },
      {
        "command": "cipherforge.resetKeys",
        "title": "CipherForge: Reset Vault Keys"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "cipherforge.remediate",
          "group": "CipherForge@1"
        }
      ]
    },
    "configuration": {
      "title": "CipherForge Settings",
      "properties": {
        "cipherforge.googleModel": {
          "type": "string",
          "enum": [
            "gemini-2.5-flash",
            "gemini-3.1-pro"
          ],
          "default": "gemini-2.5-flash",
          "description": "Select the Google model to use for the Red Team (Attacker)."
        },
        "cipherforge.anthropicModel": {
          "type": "string",
          "enum": [
            "claude-sonnet-4-6",
            "claude-opus-4-6"
          ],
          "default": "claude-sonnet-4-6",
          "description": "Select the Anthropic model to use for the Blue Team (Defender)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@google/generative-ai": "^0.24.1"
  }
}